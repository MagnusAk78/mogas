# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                                					controllers.ApplicationController.index

# Language actions
GET     /language/:languageString                   		controllers.ApplicationController.changeLanguage(languageString: String)


# Authentication actions
POST    /authentication/authenticate/:provider              controllers.SocialAuthController.authenticate(provider)
POST    /authentication/signUp                              controllers.SignUpController.submit
POST    /authentication/signIn								controllers.SignInController.submit
GET     /authentication/signIn                              controllers.SignInController.view
GET     /authentication/signUp                              controllers.SignUpController.view
GET     /authentication/signOut                             controllers.ApplicationController.signOut

# Organisation actions
POST    /organisation/save                                              controllers.OrganisationController.save
GET     /organisation/:id/edit                                          controllers.OrganisationController.edit(id: String)
GET     /organisation/:id/changeAllowedUser/:userIdString/:usersPage    controllers.OrganisationController.changeAllowedUser(id: String, userIdString: String, usersPage: Int)
GET     /organisation/:id/editAllowedUsers                              controllers.OrganisationController.editAllowedUsers(id: String, usersPage: Int=1)
GET     /organisation/:id/editAllowedUsers/:usersPage                   controllers.OrganisationController.editAllowedUsers(id: String, usersPage: Int)
GET     /organisation/:id/delete                                        controllers.OrganisationController.delete(id: String)
GET     /organisations/list                                             controllers.OrganisationController.list(organisationsPage: Int=1)
GET     /organisations/list/:organisationsPage                          controllers.OrganisationController.list(organisationsPage: Int)
GET     /organisations/editActivateOrganisation                         controllers.OrganisationController.editActiveOrganisation(page:Int=1)
GET     /organisations/editActivateOrganisation/:page                   controllers.OrganisationController.editActiveOrganisation(page:Int)
GET     /organisations/setActivateOrganisation/:id                      controllers.OrganisationController.setActiveOrganisation(id: String, page:Int=1)
GET     /organisations/setActivateOrganisation/:id/:page                controllers.OrganisationController.setActiveOrganisation(id: String, page:Int)
GET     /organisation/:id/image                                         controllers.OrganisationController.image(id: String)
GET     /organisation/:id/thumbnail                                     controllers.OrganisationController.thumbnail(id: String)

# User actions
POST    /user/edit                                  controllers.AuthenticationController.editUser
GET     /user/edit                                  controllers.ApplicationController.editUser
GET     /user/:id/show                              controllers.UserController.show(id: String, page: Int=1)
GET     /user/:id/show/:page                        controllers.UserController.show(id: String, page: Int)
GET     /users/list                                 controllers.UserController.list(page: Int=1)
GET     /users/list/:page                           controllers.UserController.list(page: Int)
GET     /user/:id/image                             controllers.UserController.image(id: String)
GET     /user/:id/thumbnail                         controllers.UserController.thumbnail(id: String)

# Map static resources from the /public folder to the /assets URL path
#GET     /assets/*file               		controllers.Assets.versioned(path="/public", file: Asset)
GET     /assets/*file                   	controllers.Assets.at(path="/public", file)
GET     /webjars/*file                   	controllers.WebJarAssets.at(file)